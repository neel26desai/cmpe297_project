{
    "endpoints": [
        {
            "path": "/hello",
            "methods": ["GET"],
            "parameters": {
                "query": {
                    "name": {
                        "type": "string",
                        "description": "The name of the user to greet"
                    }
                }
            },
            "description": "Say hello to the user.",
            "response": {
                "message": "Hello, {name}!"
            },
            "curl": "curl -X GET 'http://localhost:8000/hello?name=World'"
        },
        {
            "path": "/items/{item_id}",
            "methods": ["GET"],
            "parameters": {
                "path": {
                    "item_id": {
                        "type": "integer",
                        "description": "The ID of the item"
                    }
                },
                "query": {
                    "details": {
                        "type": "boolean",
                        "description": "Include detailed information"
                    }
                }
            },
            "description": "Fetch details of an item.",
            "response": {
                "item_id": "integer",
                "name": "string",
                "details": "string (optional)"
            },
            "curl": "curl -X GET 'http://localhost:8000/items/1?details=true'"
        },
        {
            "path": "/items/",
            "methods": ["POST"],
            "parameters": {
                "body": {
                    "item": {
                        "type": "object",
                        "description": "The item to create"
                    }
                }
            },
            "description": "Create a new item.",
            "response": {
                "message": "Item created successfully",
                "item": "object"
            },
            "curl": "curl -X POST 'http://localhost:8000/items/' -H 'Content-Type: application/json' -d '{\"name\": \"NewItem\"}'"
        },
        {
            "path": "/items/{item_id}",
            "methods": ["PUT"],
            "parameters": {
                "path": {
                    "item_id": {
                        "type": "integer",
                        "description": "The ID of the item to update"
                    }
                },
                "body": {
                    "item": {
                        "type": "object",
                        "description": "The new item data"
                    }
                }
            },
            "description": "Update an existing item.",
            "response": {
                "message": "Item {item_id} updated successfully",
                "item": "object"
            },
            "curl": "curl -X PUT 'http://localhost:8000/items/1' -H 'Content-Type: application/json' -d '{\"name\": \"UpdatedItem\"}'"
        },
        {
            "path": "/items/{item_id}",
            "methods": ["DELETE"],
            "parameters": {
                "path": {
                    "item_id": {
                        "type": "integer",
                        "description": "The ID of the item to delete"
                    }
                }
            },
            "description": "Delete an item.",
            "response": {
                "message": "Item {item_id} deleted successfully"
            },
            "curl": "curl -X DELETE 'http://localhost:8000/items/1'"
        },
        {
            "path": "/products/",
            "methods": ["GET"],
            "parameters": {
                "query": {
                    "category": {
                        "type": "string",
                        "description": "Filter by product category"
                    },
                    "price_min": {
                        "type": "float",
                        "description": "Minimum price"
                    },
                    "price_max": {
                        "type": "float",
                        "description": "Maximum price"
                    },
                    "sort_by": {
                        "type": "string",
                        "description": "Sort by field (name or price)"
                    }
                }
            },
            "description": "List products with optional filtering and sorting.",
            "response": {
                "products": "array of objects"
            },
            "curl": "curl -X GET 'http://localhost:8000/products/?category=Electronics&price_min=10&price_max=100&sort_by=name'"
        },
        {
            "path": "/register/",
            "methods": ["POST"],
            "parameters": {
                "body": {
                    "username": {
                        "type": "string",
                        "description": "The username of the user"
                    },
                    "password": {
                        "type": "string",
                        "description": "The password of the user"
                    }
                }
            },
            "description": "Register a new user.",
            "response": {
                "message": "User {username} registered successfully."
            },
            "curl": "curl -X POST 'http://localhost:8000/register/' -H 'Content-Type: application/json' -d '{\"username\": \"newuser\", \"password\": \"securepassword\"}'"
        },
        {
            "path": "/health/",
            "methods": ["GET"],
            "parameters": {},
            "description": "Check the health of the API.",
            "response": {
                "status": "OK"
            },
            "curl": "curl -X GET 'http://localhost:8000/health/'"
        }
    ]
}
